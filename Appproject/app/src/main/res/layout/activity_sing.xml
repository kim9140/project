<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#3CB371">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="노래 듣기"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#000000"
       />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_sing"
        android:queryHint="노래 제목을 입력하세요"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30~40년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_30"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="40~50년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_40"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50~60년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_50"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60~70년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_60"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="70~80년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_70"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="80~90년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_80"
        android:background="#87D5AA"

        />
    <Button
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="90~00년대 인기가요 "
        android:textSize="35dp"
        android:textStyle="bold"
        android:id="@+id/search_90"
        android:background="#87D5AA"
        />


</LinearLayout>