<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#3CB371">


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="고령자 앱 "
        android:textColor="@color/black"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center"
        >

        <Button
            android:id="@+id/weatherbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="날씨"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:background="#87D5AA"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/weather"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />

        <Button
            android:id="@+id/newsbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="뉴스"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/news"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center"
        >
        <Button
            android:id="@+id/sportsbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="운동"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/sports"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"/>

        <Button
            android:id="@+id/stretchbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="스트레칭"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/stretching"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center">

        <Button
            android:id="@+id/singbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="노래"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/sing"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />

        <Button
            android:id="@+id/mapbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="위치"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/map"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center">

        <Button
            android:id="@+id/alarmbtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="알람"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableTop="@drawable/alarm"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"/>

        <Button
            android:id="@+id/emergencybtn"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="긴급"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#b33c7e"
            android:drawableTop="@drawable/emergency"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center">
        <Button
            android:id="@+id/micbtn"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:text="음성인식"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableLeft="@drawable/mic"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />
        <Button
            android:id="@+id/setbtn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:background="#87D5AA"
            android:drawableLeft="@drawable/set"
            android:paddingBottom="15dp"
            android:padding="0dp"
            android:drawablePadding="-9dp"
            />
    </LinearLayout>

</LinearLayout>

